<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css?family=Poppins&display=swap');

        body {
            background: rgb(228, 208, 200);
            font-family: 'Poppins', sans-serif;
        }
    </style>
    <title>Store Database</title>
</head>

<body>
    <%- include ('../partials/header.ejs') %>
    <div class="container-fluid">
        <h5 class="my-3">Product Deletion</h5>
        <table id="cart" class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:50%">Product</th>
                    <th style="width:10%">ProductID</th>
                    <th style="width:8%">Price</th>
                    <th style="width:22%" class="text-center">Quantity</th>
                    <th style="width:10%"></th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<data.length; i++){ %>
                <tr>
                    <td data-th="Product">
                        <div class="row">
                            <div class="col-sm-2 hidden-xs"><img src="<%= data[i].imgLink %>" alt="..." width=60px
                                    height=60px /></div>
                            <div class="col-sm-10 ">
                                <h4> <%= data[i].product_name %></h4>
                                <p> <%= data[i].product_desc %> </p>
                            </div>
                        </div>
                    </td>
                    <td data-th="ProductID"><%= data[i].product_ID %></td>
                    <td data-th="Price">$<%= data[i].buy_price %></td>
                    <td data-th="Quantity" class="text-center"><%= data[i].quantity_inStock %></td>
                    <td class="actions" data-th="">
                        <a href="/admin/delete/<%= data[i].product_ID %>"
                            onclick="return confirm('Are you sure you want to delete this product?');" <button
                            class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i></button>
                    </td>
                </tr>
                <% } %>
            </tbody>
            <tfoot>
                <tr>
                    <td><a href="/admin" class="btn btn-warning"><i class="fa fa-angle-left"></i> Back to Admin Page</a>
                    </td>
                    <td colspan="2" class="hidden-xs"></td>
                </tr>
            </tfoot>
        </table>
    </div>



</html>