<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
  <title>Store Database</title>
</head>

<body>
  <%- include ('../partials/header.ejs') %>
  <% var totalPrice = 0; %>
  <div class="container-fluid">
    <table id="cart" class="table table-hover table-condensed">
      <thead>
        <tr>
          <th style="width:50%">Product</th>
          <th style="width:10%">Price</th>
          <th style="width:8%">Quantity</th>
          <th style="width:22%" class="text-center">Subtotal</th>
          <th style="width:10%"></th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<data.length; i++){ %>
        <tr>
          <td data-th="Product">
            <div class="row">
              <div class="col-sm-2 hidden-xs"><img src="<%= data[i].imgLink %>" class="img-responsive" /></div>
              <div class="col-sm-10 ">
                <h4> <%= data[i].product_name %></h4>
                <p> <%= data[i].product_desc %> </p>
              </div>
            </div>
          </td>
          <td data-th="Price">$<%= data[i].price %></td>
          <td data-th="Quantity">
            <p><%= data[i].quantity %></p>
          </td>
          <td data-th="Subtotal" class="text-center">$<%= (data[i].price * data[i].quantity).toFixed(2) %></td>
          <% totalPrice += data[i].price * data[i].quantity %>
          <td class="actions" data-th="">
            <a href="/cart/delete/<%= data[i].FK_product_cart %>" <button class="btn btn-danger btn-sm"><i
                class="fa fa-trash-o"></i></button>
          </td>
        </tr>
        <% } %>
      </tbody>
      <tfoot>
        <tr>
          <td><a href="/" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue Shopping</a></td>
          <td colspan="2" class="hidden-xs"></td>
          <td class="hidden-xs text-center"><strong>Total $<%= totalPrice.toFixed(2) %></strong></td>
          <td><a href="/order/orderinfo/<%= memID %>/<%= totalPrice.toFixed(2)%>" class="btn btn-success btn-block">Checkout <i
                class="fa fa-angle-right"></i></a></td>

        </tr>
      </tfoot>
    </table>
  </div>



</html>